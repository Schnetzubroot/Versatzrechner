---
const { name, label } = Astro.props;
---

<div class="w-48 p-2">
	<label for={name} class="text-white font-extralight mb-4">{label}:</label>
	<div class="relative mt-1">
		<input
			type="number"
			class="relative w-full cursor-default rounded-lg bg-blue-100 py-2 pl-3 pr-10 text-black text-left shadow-md focus:outline-none focus-visible:border-indigo-500 focus-visible:ring-2 focus-visible:ring-blue-400 sm:text-sm"
			readonly
			id={name}
		/>
		<span
			class="absolute right-3 top-1 text-gray-500 font-normal text-base sm:text-sm sm:top-2"
		>
			<p>mm</p>
		</span>
	</div>
</div>

<style>
	input[type='number'] {
		-moz-appearance: textfield; /* Firefox */
	}

	input[type='number']::-webkit-inner-spin-button,
	input[type='number']::-webkit-outer-spin-button {
		-webkit-appearance: none;
	}
</style>
